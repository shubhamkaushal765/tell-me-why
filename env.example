# RAG Code Assistant Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# CRITICAL: API Keys
# =============================================================================

# Anthropic API Key (only needed if using Claude)
# Get your key from: https://console.anthropic.com/
# WARNING: Using Claude will send your private code context to Anthropic servers
ANTHROPIC_API_KEY=

# =============================================================================
# Paths
# =============================================================================

# Path to your private Angular/React documentation and code
# This directory should contain subdirectories like:
#   - docs/         (Markdown, PDF documentation)
#   - src/          (TypeScript, HTML, CSS code files)
DOCS_PATH=/path/to/private_docs

# Path where the vector database will be stored
CHROMA_DB_PATH=./chroma_db

# =============================================================================
# Model Configuration
# =============================================================================

# Default LLM to use: "ollama" (private, local) or "claude" (cloud, better performance)
DEFAULT_LLM=ollama

# Ollama configuration
OLLAMA_MODEL=codellama        # Options: codellama, llama3, deepseek-coder
OLLAMA_BASE_URL=http://localhost:11434

# Claude configuration
CLAUDE_MODEL=claude-sonnet-4-20250514

# Embedding model (local HuggingFace model)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# RAG Configuration
# =============================================================================

# Text chunking
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Number of relevant documents to retrieve for each query
RETRIEVAL_K=5

# =============================================================================
# API Configuration
# =============================================================================

# API server settings
API_HOST=0.0.0.0
API_PORT=8000

# CORS origins (comma-separated list)
# Add your Next.js frontend URL here
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# Logging
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
